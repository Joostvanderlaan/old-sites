{
  "name": "joostvanderlaan",
  "version": "1.0.0",
  "description": "This is an example site for [Hugo](https://gohugo.io/).",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run theme:build && npm run hugo:build && npm run optimize:html",
    "build:test": "npm run clean && npm run theme:build && npm run hugo:buildtest && npm run optimize:html",
    "start": "concurrently \"npm:hugo:start\" \"npm:theme:start\"",
    "hugo:start": "concurrently \"webpack --bail -p --watch\" \"hugo -p=8080 server --buildDrafts --theme=amp #--config='config/config_${SITE:-joostvanderlaan.nl}.toml'\"",
    "hugo:build": "npm run clean && webpack --bail -p && hugo --theme=amp",
    "hugo:buildtest": "npm run clean && webpack --bail -p && hugo --theme=amp",
    "hugo:gc": "hugo --gc",
    "theme:install": "cd themes/amp/ && npm i",
    "theme:start": "cd themes/amp/ && npm run start",
    "theme:build": "cd themes/amp/ && npm run build",
    "clean": "rm -rf ../dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fashionunited/amp-test-hugoBasicExample.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fashionunited/amp-test-hugoBasicExample/issues"
  },
  "homepage": "https://github.com/fashionunited/amp-test-hugoBasicExample#readme",
  "devDependencies": {
    "concurrently": "^4.1.0"
  }
}
